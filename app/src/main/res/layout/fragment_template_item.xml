<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        style="@style/wrap_layout"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/template_detail"
            style="@style/single_layout"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <!--模板标题-->
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/template_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="This is title"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--模板发布人-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:maxLines="2"
                        android:id="@+id/template_publisher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center_vertical"
                        android:text="Taylor Siassss asdf "
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/template_desc"
                    style="@style/usertext"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="这是一个非常长的描述区域，这是一个非常长的描述区域，这是一个非常长的描述区域，这是一个非常长的描述区域，这是一个非常长的描述区域" />
            </LinearLayout>

            <!--这是每个被浏览的任务界面最下面的区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sketch_1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/number2" />

                <TextView
                    android:id="@+id/template_number"
                    style="@style/usertext2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="3" />

                <ImageView
                    android:id="@+id/sketch_2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/stage2" />

                <TextView
                    android:id="@+id/template_stage"
                    style="@style/usertext2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="4" />

                <ImageView
                    android:id="@+id/sketch_3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/hot" />

                <TextView
                    android:id="@+id/template_used"
                    style="@style/usertext2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="135" />

                <Button
                    android:id="@+id/collectTemp"
                    style="@style/ButtonStyle2"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:text="@string/collect" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
