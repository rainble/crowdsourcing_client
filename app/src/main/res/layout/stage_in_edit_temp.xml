<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/wrap_layout"
        android:layout_marginTop="10dp">

        <LinearLayout
            style="@style/single_layout2"
            android:orientation="horizontal"
            android:layout_height="85dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/stage_index"
                    style="@style/ButtonStyle4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="15dp"
                    android:text="1"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/stage_detail"
                android:textColor="@color/text_clo"
                android:layout_width="wrap_content"
                android:layout_weight="10000000"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                />
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/stage_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/setting" />

                <ImageView
                    android:id="@+id/stage_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                android:src="@drawable/trash2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
